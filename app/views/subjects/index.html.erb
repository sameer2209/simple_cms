<% if !flash[:notice].blank? %>
<div class="notice">
	<%= flash[:notice] %>
</div>
<% end %>

<div class = "subjects index">
	<h2>Subjects</h2>
	<%= link_to "Add New Subject", new_subject_url, :class => 'action new' %>

	<table class="listing" summary="Subject List">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
		<tr>
			<td><%= subject.position %></td>
			<td><%= subject.name %></td>
			<td class = "center"><%= subject.visible ? 'Yes' : 'No'%></td>
			<td class = "center"><%= subject.pages.size %></td>
			<td class = "action">
				<%= link_to 'Show', subject_path(subject) %>
				<%= link_to 'Edit', edit_subject_path(subject.id) %>
				<%= link_to 'Delete', subject_url(subject.id), method: :delete%>  				
			</td>
		</tr>
		<% end %>
	</table>
</div>
