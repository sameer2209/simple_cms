<div class="pages index">
	<h2>Pages</h2>
	<%= link_to "Add New Page" , new_page_path %>

	<table class="listing" summary="Pages Detail">
		<th>Name</th>
		<th>Permalink</th>
		<th>Position</th>
		<th>Visible</th>
		<th>Actions</th>

		<% @pages.each do |page| %>
		<tr>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td><%= page.position %></td>
			<td><%= page.visible %></td>
			<td class="actions">
				<%= link_to "Show", page_path(page) %>
				<%= link_to "Edit", edit_page_path(page) %>
				<%= link_to("Delete", '#') %>
			</td>
		</tr>
		<% end %>
	</table>

</div>